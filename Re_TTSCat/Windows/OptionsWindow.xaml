<Window x:Class="Re_TTSCat.Windows.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Re_TTSCat.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Re: TTSCat - 插件管理"
        MinHeight="620" Height="620"
        MinWidth="850" Width="850"
        Closing="Window_Closing">
    <Window.Resources>
        <FontFamily x:Key="FontAwesome">/Re_TTSCat;component/Resources/#Font Awesome 5 Free Solid</FontFamily>
        <Thickness x:Key="spMarginStats">5,0,5,0</Thickness>
        <Style x:Name="tbFontIconSpacing" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="2,0,2,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid x:Name="Grid_Master">
            <CheckBox x:Name="CheckBox_IsPluginActive" IsEnabled="False" Margin="0,3,3,0" VerticalAlignment="Top" HorizontalAlignment="Right" ToolTip="插件的运行状态&#xA;&#xA;此处无法切换插件状态，请使用弹幕姬本体插件管理">
                <local:IconTextBlock IconGlyph="&#xF0E7;" Text="插件已启用"/>
            </CheckBox>
            <TabControl x:Name="TabControl_Main" Margin="0,0,0,60">
                <TabItem>
                    <TabItem.Header>
                        <local:IconTextBlock IconGlyph="&#xF013;" Text="常规选项"/>
                    </TabItem.Header>
                    <Grid>
                        <TreeView x:Name="TreeView_GeneralSettings" Margin="0,0,0,100" BorderBrush="{x:Null}">
                            <TreeView.Resources>
                                <Style TargetType="{x:Type CheckBox}">
                                    <Setter Property="Margin" Value="-18.7,2.5,0,2.5"/>
                                </Style>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />
                            </TreeView.Resources>
                            <TreeViewItem IsExpanded="True">
                                <TreeViewItem.Header>
                                    <local:IconTextBlock IconGlyph="&#xF1DE;" Text="一般"/>
                                </TreeViewItem.Header>
                                <StackPanel>
                                    <CheckBox x:Name="CheckBox_AutoUpdates" Content="自动检查更新" IsChecked="True" ToolTip="在插件启动时自动检查更新&#xA;&#xA;这并不会拖慢插件启动速度"/>
                                    <CheckBox x:Name="CheckBox_ReadInQueue" Content="逐条阅读语音" IsChecked="True" ToolTip="待正在朗读的语音结束后再继续朗读下一条语音&#xA;&#xA;如果您的直播间中有大量弹幕，建议启用"/>
                                    <CheckBox x:Name="CheckBox_SuperChatIgnoreRandomDitch" IsChecked="True" Content="对醒目留言无视随机朗读选项" ToolTip="读出所有醒目留言，无视目前已有的随机朗读选项"/>
                                    <CheckBox x:Name="CheckBox_GiftsThrottle" IsChecked="True" Content="合并短时间内同一用户的相同礼物" ToolTip="合并一段时间内来自同一发送者的所有同一礼物&#xA;&#xA;这也会带来若干秒的语音延迟"/>
                                </StackPanel>
                            </TreeViewItem>
                            <TreeViewItem IsExpanded="True">
                                <TreeViewItem.Header>
                                    <local:IconTextBlock IconGlyph="&#xF3E5;" Text="语音答复"/>
                                </TreeViewItem.Header>
                                <StackPanel>
                                    <CheckBox x:Name="CheckBox_InstantVoiceReply" IsChecked="False" Content="立即读出语音答复" ToolTip="在收到弹幕的瞬间立刻读出语音答复而不排队"/>
                                    <CheckBox x:Name="CheckBox_VoiceReplyFirst" IsChecked="False" Content="优先读出语音答复" ToolTip="先读出语音答复，再读出对应的语音（如弹幕）"/>
                                    <CheckBox x:Name="CheckBox_IgnoreIfHit" IsChecked="False" Content="命中语音答复规则即取消朗读" ToolTip="如弹幕或礼物等命中了语音答复规则，则仅朗读语音答复"/>
                                </StackPanel>
                            </TreeViewItem>
                            <TreeViewItem IsExpanded="True">
                                <TreeViewItem.Header>
                                    <local:IconTextBlock IconGlyph="&#xF019;" Text="缓存"/>
                                </TreeViewItem.Header>
                                <StackPanel>
                                    <CheckBox x:Name="CheckBox_DoNotKeepCache" Content="不保留缓存文件" ToolTip="在朗读完毕后立即删除缓存文件&#xA;&#xA;如果您的直播间中有大量弹幕，建议启用"/>
                                    <CheckBox x:Name="CheckBox_ClearCacheOnStartup" Content="在启动时清理残留缓存" IsChecked="True" ToolTip="在弹幕姬启动时自动清理上次运行剩余的缓存"/>
                                    <CheckBox x:Name="CheckBox_SaveCacheInTemp" Content="在系统临时文件夹保存缓存" IsChecked="True" ToolTip="在系统缓存文件夹保存缓存文件&#xA;&#xA;由系统管理缓存文件，推荐使用"/>
                                </StackPanel>
                            </TreeViewItem>
                            <TreeViewItem IsExpanded="True">
                                <TreeViewItem.Header>
                                    <local:IconTextBlock IconGlyph="&#xF06A;" Text="事件"/>
                                </TreeViewItem.Header>
                                <StackPanel>
                                    <CheckBox x:Name="CheckBox_ProcessEvents" IsChecked="True" Content="处理连接/断开事件" ToolTip="允许插件在弹幕姬连接/断开时读出相应内容" Checked="CheckBox_ProcessEvents_IsCheckedChanged" Unchecked="CheckBox_ProcessEvents_IsCheckedChanged"/>
                                    <CheckBox x:Name="CheckBox_ClearQueueOnDisconnect" IsChecked="True" Content="断开连接时清空朗读队列" ToolTip="在断开连接时取消所有待朗读语音（需要启用&quot;处理连接/断开&quot;事件）"/>
                                    <CheckBox x:Name="CheckBox_AutoStartOnLoad" IsChecked="False" Content="在弹幕姬启动时自动启动插件" ToolTip="启用此选项后，插件将在弹幕姬启动时自动启用&#xA;&#xA;这会拖慢弹幕姬启动速度"/>
                                </StackPanel>
                            </TreeViewItem>
                            <TreeViewItem IsExpanded="True">
                                <TreeViewItem.Header>
                                    <local:IconTextBlock IconGlyph="&#xF028;" Text="音频"/>
                                </TreeViewItem.Header>
                                <StackPanel>
                                    <CheckBox x:Name="CheckBox_UseDirectSound" Content="使用 DirectSound 输出" ToolTip="使用 DirectSound 作为音频输出接口。&#xA;DirectSound 通常具有更佳性能和更小占用，并允许您选择特定的输出设备。&#xA;&#xA;此功能可能会在部分声卡设备上产生杂音，如果您遇到了此类问题，请尝试禁用此选项。"/>
                                    <local:IconTextBlock IconGlyph="&#xF074;" Text="选择音频输出设备"/>
                                    <ComboBox x:Name="ComboBox_OutputDevice" IsEnabled="{Binding ElementName=CheckBox_UseDirectSound, Path=IsChecked}" Width="400" ToolTip="选择音频输出设备。"/>
                                    <CheckBox x:Name="CheckBox_AutoFallback" IsEnabled="{Binding ElementName=CheckBox_UseDirectSound, Path=IsChecked}" Margin="0,5,0,0" Content="所选设备不可用时，自动切换回默认音频设备"/>
                                </StackPanel>
                            </TreeViewItem>
                        </TreeView>
                        <StackPanel Orientation="Horizontal" Margin="0,5,25,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <local:IconTextBlock IconGlyph="&#xF0AD;"/>
                            <TextBlock>
                                控制插件的基本功能，鼠标悬浮可查看帮助。前往<Hyperlink Click="Hyperlink_Click_1">高级设置</Hyperlink>以调整语音参数、字数限制和随机朗读等
                            </TextBlock>
                        </StackPanel>
                        <TextBlock Margin="0,0,25,100" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontFamily="{StaticResource FontAwesome}" FontSize="30" Text="&#xF0AB;">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                From="Black" To="Transparent" Duration="0:0:2">
                                                <ColorAnimation.EasingFunction>
                                                    <PowerEase EasingMode="EaseIn" Power="20"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <GroupBox Height="90" Margin="5,0,5,5" VerticalAlignment="Bottom">
                            <GroupBox.Header>
                                <local:IconTextBlock IconGlyph="&#xF201;" Text="统计数据"/>
                            </GroupBox.Header>
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top">
                                    <StackPanel Margin="{StaticResource spMarginStats}">
                                        <local:IconTextBlock IconGlyph="&#xF101;" Text="等待朗读的语音（点击清空）"/>
                                        <TextBlock x:Name="TextBlock_TTSInQueue" MouseDown="TextBlock_TTSInQueue_MouseDown" FontSize="25" TextWrapping="Wrap" Text="正在计算" ToolTip="已经合成完毕，正在队列中等待播放的语音（点击数字以清空队列）"/>
                                    </StackPanel>
                                    <StackPanel Margin="{StaticResource spMarginStats}">
                                        <local:IconTextBlock IconGlyph="&#xF00C;" Text="已播放的语音"/>
                                        <TextBlock x:Name="TextBlock_TotalPlayed" FontSize="25" TextWrapping="Wrap" Text="正在计算" ToolTip="已经完成播放的语音"/>
                                    </StackPanel>
                                    <StackPanel Margin="{StaticResource spMarginStats}">
                                        <local:IconTextBlock IconGlyph="&#xF1E2;" Text="下载出错次数"/>
                                        <TextBlock x:Name="TextBlock_TotalFailed" FontSize="25" TextWrapping="Wrap" Text="正在计算" ToolTip="下载过程中发生错误的次数"/>
                                    </StackPanel>
                                    <StackPanel Margin="{StaticResource spMarginStats}">
                                        <local:IconTextBlock IconGlyph="&#xF0A0;" Text="缓存体积"/>
                                        <TextBlock x:Name="TextBlock_CacheSize" FontSize="25" TextWrapping="Wrap" Text="正在计算"/>
                                    </StackPanel>
                                </StackPanel>
                                <CheckBox x:Name="CheckBox_AutoUpdate" Margin="0,10,5,0" VerticalAlignment="Top" HorizontalAlignment="Right" ToolTip="自动更新统计数据" Checked="CheckBox_AutoUpdate_Checked" Unchecked="CheckBox_AutoUpdate_Unchecked">
                                    <local:IconTextBlock IconGlyph="&#xF2F1;" Text="自动刷新统计数据"/>
                                </CheckBox>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <local:IconTextBlock IconGlyph="&#xF5AA;" Text="自定义读出内容"/>
                    </TabItem.Header>
                    <Grid ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal" Margin="0,5,5,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                            <local:IconTextBlock IconGlyph="&#xF245;"/>
                            <TextBlock>
                                将鼠标悬浮于对应文本框上以查看帮助，<Underline>留空以停用朗读</Underline>；如需更多信息，请查看<Hyperlink Click="Hyperlink_Click" ToolTip="前往弹幕姬官网的插件页面查看有关自定义读出内容的帮助文档">自定义变量帮助</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <StackPanel>
                                <local:IconTextBlock IconGlyph="&#xF086;" Text="收到弹幕时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_OnDanmaku" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义收到弹幕时的读出内容&#xA;&#xA;可用变量:&#xA;$USER - 用户名&#xA;提示: 用户名可包含老爷头衔/舰队等级，具体内容请点击右上角&quot;自定义变量帮助&quot;&#xA;$DM - 弹幕文本"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF653;" Text="收到醒目留言时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_OnSuperChat" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义收到醒目留言时的读出内容&#xA;&#xA;可用变量:&#xA;$USER - 用户名&#xA;提示: 用户名可包含老爷头衔/舰队等级，具体内容请点击右上角&quot;自定义变量帮助&quot;&#xA;$DM - 弹幕文本&#xA;$PRICE 发送醒目留言所花费的金额"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF06B;" Text="收到礼物时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_OnGift" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义收到礼物时的读出内容&#xA;&#xA;可用变量:&#xA;$USER - 用户名&#xA;提示: 用户名可包含老爷头衔/舰队等级，具体内容请点击右上角&quot;自定义变量帮助&quot;&#xA;$GIFT - 礼物名称&#xA;$COUNT - 礼物数量"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF144;" Text="直播开始时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_LiveStart" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义直播开始时的读出内容&#xA;&#xA;此字段无变量可用"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF28D;" Text="直播结束时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_LiveEnd" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义直播结束时的读出内容&#xA;&#xA;此字段无变量可用"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF13D;" Text="船员上船时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_GuardBuy" Height="23" Text="" ToolTip="自定义船员上船时的读出内容&#xA;&#xA;可用变量:&#xA;$USER - 上船的船员名称&#xA;$COUNT - 上船月份数目"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF521;" Text="老爷进入时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_Welcome" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义老爷进入时的读出内容&#xA;&#xA;可用变量:&#xA;$USER - 老爷的用户名"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF13D;" Text="船员进入时，朗读以下内容："/>
                                <TextBox x:Name="TextBox_WelcomeGuard" Height="23" TextWrapping="Wrap" Text="" ToolTip="自定义船员进入时的读出内容&#xA;&#xA;可用变量:&#xA;$USER - 船员的用户名"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF02C;" Text="自定义头衔："/>
                                <TextBox x:Name="TextBox_CustomTitles" Height="23" TextWrapping="Wrap" Text="" ToolTip="顺序: 老爷/普通用户/总督/提督/舰长"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF071;" Text="超管警告朗读内容："/>
                                <TextBox x:Name="TextBox_SuperAdminWarnings" Height="23" TextWrapping="Wrap" Text="" ToolTip="当收到超管警告时读出的内容"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <local:IconTextBlock IconGlyph="&#xF0C0;" Text="用户交互事件"/>
                    </TabItem.Header>
                    <Grid ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Horizontal" Margin="0,5,5,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                            <local:IconTextBlock IconGlyph="&#xF05A;"/>
                            <TextBlock>
                                <Underline>留空以停用朗读</Underline>。如需更多信息，请查看<Hyperlink Click="Hyperlink_Click" ToolTip="前往弹幕姬官网的插件页面查看有关自定义读出内容的帮助文档">自定义变量帮助</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <StackPanel>
                                <local:IconTextBlock IconGlyph="&#xF2F6;" Text="观众进入直播间"/>
                                <TextBox Height="23" x:Name="TextBox_InteractEnter"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF14D;" Text="直播间被分享"/>
                                <TextBox Height="23" x:Name="TextBox_InteractShare"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF234;" Text="观众关注直播间"/>
                                <TextBox Height="23" x:Name="TextBox_InteractFollow"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF004;" Text="观众特别关注直播间"/>
                                <TextBox Height="23" x:Name="TextBox_InteractSpecialFollow"/>
                            </StackPanel>
                            <StackPanel Margin="0,5,0,0">
                                <local:IconTextBlock IconGlyph="&#xF362;" Text="观众与主播互相关注直播间"/>
                                <TextBox Height="23" x:Name="TextBox_InteractMutualFollow"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <local:IconTextBlock IconGlyph="&#xF005;" VerticalAlignment="Top"/>
                            <TextBlock>
                                <Run>此页面所有项目均可使用以下变量：</Run><LineBreak/>
                                <Run FontFamily="Consolas">$USER</Run><Run>: 用户名</Run><LineBreak/>
                                <Run>也可使用</Run> <Run FontFamily="Consolas">$$, $!</Run> <Run>式复合写法，具体请查看</Run><Hyperlink Click="Hyperlink_Click" ToolTip="前往弹幕姬官网的插件页面查看有关自定义读出内容的帮助文档">帮助文档</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <local:IconTextBlock IconGlyph="&#xF3E5;" Text="语音答复"/>
                    </TabItem.Header>
                    <Grid>
                        <CheckBox Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="CheckBox_EnableVoiceReply">
                            <local:IconTextBlock IconGlyph="&#xF130;" Text="启用语音答复" ToolTip="启用后，插件可对观众的弹幕自动作出回应"/>
                        </CheckBox>
                        <Button Margin="0,5,95,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="27.5" Width="85" x:Name="Button_DeleteRule" Click="Button_DeleteRule_Click">
                            <local:IconTextBlock IconGlyph="&#xF2ED;" Text="删除规则" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="27.5" Width="85" x:Name="Button_AddRule" Click="Button_AddRule_Click">
                            <local:IconTextBlock IconGlyph="&#xF067;" Text="新增规则" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <local:IconTextBlock Margin="5,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" IconGlyph="&#xF5AE;" Text="规则列表"/>
                        <ListView x:Name="ListView_VoiceReplyRules" Margin="5,40,5,5" HorizontalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <ListView.Resources>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.Resources>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="60">
                                        <GridViewColumn.Header>
                                            <local:IconTextBlock IconGlyph="&#xF14A;" Text="已启用"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsTurnedOn, Mode=TwoWay}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100">
                                        <GridViewColumn.Header>
                                            <local:IconTextBlock IconGlyph="&#xF4AD;" Text="关键词"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox HorizontalAlignment="Stretch" Text="{Binding Keyword, Mode=TwoWay}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="135">
                                        <GridViewColumn.Header>
                                            <local:IconTextBlock IconGlyph="&#xF0EB;" Text="匹配数据源"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox HorizontalAlignment="Stretch" SelectedIndex="{Binding MatchingSource, Mode=TwoWay}">
                                                    <ComboBoxItem ToolTip="匹配弹幕的文本内容&#xA;&#xA;可用变量与&quot;自定义读出内容&quot;页面的可定制性相同，具体请转至该页面，鼠标悬浮在对应项目上查看">
                                                        <local:IconTextBlock IconGlyph="&#xF4AD;" Text="弹幕内容"/>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem ToolTip="匹配发送弹幕的用户名&#xA;&#xA;可用变量与&quot;自定义读出内容&quot;页面的可定制性相同，具体请转至该页面，鼠标悬浮在对应项目上查看">
                                                        <local:IconTextBlock IconGlyph="&#xF007;" Text="弹幕发送用户"/>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem ToolTip="匹配礼物名称&#xA;&#xA;可用变量与&quot;自定义读出内容&quot;页面的可定制性相同，具体请转至该页面，鼠标悬浮在对应项目上查看">
                                                        <local:IconTextBlock IconGlyph="&#xF06B;" Text="礼物名称"/>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem ToolTip="匹配发送礼物的用户名&#xA;&#xA;可用变量与&quot;自定义读出内容&quot;页面的可定制性相同，具体请转至该页面，鼠标悬浮在对应项目上查看">
                                                        <local:IconTextBlock IconGlyph="&#xF507;" Text="礼物发送用户"/>
                                                    </ComboBoxItem>
                                                </ComboBox>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="130">
                                        <GridViewColumn.Header>
                                            <local:IconTextBlock IconGlyph="&#xF085;" Text="匹配模式"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
